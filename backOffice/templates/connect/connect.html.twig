{% extends 'base.html.twig' %}

{% block title 'Grain de Vrac - Admin - Connexion' %}
{% block stylesheets %} <link rel="stylesheet" href="{{ asset('css/styleConnect.css') }}" /> {% endblock %}

{% block body%}

    <div class="connect-wrapper">

        <header class="connect-header">
            <div class="connect-backgroundViolet"></div>
            <a href='http://graindevrac.com'><img src="{{ asset('assets/grainDeVrac-logo-blanche-png.png')}}" alt="logo Grain de vrac - Coralie Lasseur, Mathieu Chamoulaud"></a>
        </header>

        <main class="connect-main">
            <h2>Connexion</h2>

            {% if error %}

            <div>{{ error }}</div>

            {% endif %}

            <form methode="post" action="{{path('app_login')}}" >
                <label for="username">Adresse e-mail</label>
                    <input type="text" id="username" name="_username" placeholder="entrez votre identifiant" value="{{ last_username }}"></input>
                
                <label for="password">Mot de passe</label>
                    <input type="password" id="password" name="_password" placeholder="entrez votre mot de passe"></input>
                

                <a href="/mot-de-passe-oublie">mot de passe oubli√© ?</a>

                <input type="submit" value="Me connecter" />
            </form>
        </main>
    </div>

{% endblock %}